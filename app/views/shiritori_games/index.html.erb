<div class="container mx-auto p-4 flex justify-center flex-col">
  <%= link_to '新しいしりとりゲームを作成', new_shiritori_game_path, class: "btn btn-primary mb-4" %>

  <!-- Card List -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @shiritori_games.each do |game| %>
      <div class="card w-full bg-white shadow-xl rounded-lg">
        <div class="card-body">
          <div class="card-title text-lg font-bold">
            <%= link_to "ゲーム名: #{game.game_title}", shiritori_game_path(game) %>
          </div>
          <div class="badge badge-<%= shiritori_status_class(game.status) %> gap-2 text-white">しりとり : <strong><%= game.enum_i18n(:status) %></strong></div>
          <p class="text-sm"><strong><i class="fa fa-clock-o fa-1a"></i></strong> <%= game.created_at.strftime("%Y-%m-%d %H:%M") %></p>
          
          <!-- Drawing Carousel -->
          <div class="carousel w-full mb-4">
            <% game.drawings.each_with_index do |drawing, drawing_index| %>
              <div id="drawing-slide-<%= drawing_index %>" class="carousel-item w-full">
                <img src="<%= drawing.artwork_url %>" class="w-full rounded-lg">
              </div>
            <% end %>
          </div>
          
          <!-- Drawing Carousel Navigation -->
          <div class="flex justify-center w-full py-2 gap-2">
            <% game.drawings.each_with_index do |_, drawing_index| %>
              <a href="#drawing-slide-<%= drawing_index %>" class="btn btn-xs">•</a>
            <% end %>
          </div>

          <div class="card-actions justify-end">
            <%= link_to '表示', shiritori_game_path(game), class: "btn btn-neutral btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
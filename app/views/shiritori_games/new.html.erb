<div class="card shadow-lg compact bg-white p-4">
  <div class="card-body">
    <%= form_with model: @shiritori_game, local: true, class: "space-y-4" do |f| %>
      <!-- エラーメッセージの表示 -->
      <%= render 'shared/error_messages', object: f.object %>

      <h1 class="text-2xl font-bold mb-4 text-center">
      ゲームのお題を作成しましょう！<br>
      しばりをつけると面白くなるかも！
      </h1>
      <div class="form-group">
        <%= f.label :game_title, class: "label text-lg" %>
        <%= f.text_field :game_title, class: "input input-bordered w-full", placeholder: '3文字で, 一筆書きで など' %>
      </div>
      <p class="label text-lg">作成者: <%= current_user.name %></p>

      <%= f.hidden_field :status, value: "in_progress" %>

      <div class="text-center mt-4">
        <%= f.submit '作成', class: "btn btn-primary" %>
        <%= link_to 'お題一覧に戻る', shiritori_games_path, class: "btn mt-4" %>
      </div>
    <% end %>
  </div>
</div>
<div class="container mx-auto p-4">
  <div class="flex justify-center">
    <div class="w-full max-w-lg bg-white p-6 rounded-lg shadow-lg">
      <h1 class="text-2xl font-bold mb-4"><%= t('.title') %></h1>
      <%= form_with model: @user, class: "space-y-4" do |f| %>
        <div class="form-control">
          <%= f.label :name, class: "label" do %>
            <span class="-text">名前</span>
          <% end %>
          <%= f.text_field :name, class: "input input-bordered w-full", placeholder: "がはくくん" %>
        </div>
        <div class="form-control">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">メールアドレス</span>
          <% end %>
          <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "gahakuno@kimochi.com" %>
        </div>
        <div class="form-control">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">パスワード(3文字以上)</span>
          <% end %>
          <%= f.password_field :password, class: "input input-bordered w-full", placeholder: "***" %>
        </div>
        <div class="form-control">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">パスワード確認</span>
          <% end %>
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full", placeholder: "***" %>
        </div>
        <div class="flex justify-center mt-4">
          <%= f.submit class: "btn btn-primary btn-wide" %>
        </div>
      <% end %>
      <div class='text-center mt-4'>
        <%= link_to t('.to_login_page'), login_path, class: "link link-primary" %>
      </div>
    </div>
  </div>
</div>
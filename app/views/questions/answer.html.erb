<div class="w-5/6 mx-auto max-w-screen-xl my-0 text-center">
  <% if @is_correct %>
    <div class="flex justify-center items-center my-4">
      <%= image_tag 'pinpon.png', class: 'w-48 h-16 md:w-48 md:h-16' %> <!-- サイズ調整 -->
    </div>
    <div class="flex justify-center items-center my-4 tooltip tooltip-bottom tooltip-open" data-tip="正解は<%= @answer %>じゃな！画伯の気持ちをよくわかっておる">
      <%= image_tag 'gahakukun_maru.png', class: 'w-32 h-32 md:w-32 md:h-32 rounded-full' %> <!-- サイズ調整と丸みを追加 -->
    </div>
  <% else %>
    <div class="flex justify-center items-center my-4">
      <%= image_tag 'bubu.png', class: 'w-48 h-16 md:w-48 md:h-16' %> <!-- サイズ調整 -->
    </div>
    <div class="flex justify-center items-center my-4 tooltip tooltip-bottom tooltip-open" data-tip="不正解じゃ！どこからどう見ても<%= @answer %>じゃぞ！">
      <%= image_tag 'gahakukun_batsu.png', class: 'w-32 h-32 md:w-32 md:h-32 rounded-full' %> <!-- サイズ調整と丸みを追加 -->
    </div>
  <% end %>
  <div class="flex justify-center items-center mt-10">
    <%= image_tag @question.image_url, class: 'w-32 h-32 md:w-32 md:h-32' %> <!-- サイズ調整 -->
  </div>
  <div class="flex justify-center items-center my-4 space-x-4"> <!-- スペースを追加 -->
    <%= link_to '最初に戻る', root_path, class: 'btn btn-primary m-2' %>
    <%= link_to '次の問題へ', play_path, class: 'btn btn-primary m-2' %>
  </div>
</div>